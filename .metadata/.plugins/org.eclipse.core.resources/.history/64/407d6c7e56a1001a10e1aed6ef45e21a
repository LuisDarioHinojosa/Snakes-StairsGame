#ifndef PLAYER_H_
#define PLAYER_H_
#include <iostream>
#pragma once
class Player {
public:
	Player()= default;
	Player(string name);
	void updateScore();
	virtual void print();
	void oneUP();
	string getUserName();
	void setUsername(string name);
	int getScore();
	virtual ~Player();
protected:
	string username;
	int score;
private:
};

#endif /* PLAYER_H_ */
